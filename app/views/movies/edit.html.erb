<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to image_tag('sympasee_logo.png' , size: '200x50'), "/" %>

  </header>
  <div class="items-sell-main">
    <h2 class="items-sell-title">商品の情報を入力</h2>
    <%= form_with model: @movie, local: true do |f| %>

    <% render 'shared/error_messages', model: f.object %>

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        作品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :movie_image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
          作品名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :movie_title, class:"movies-text", id:"movie-title", placeholder:"商品名（必須 50文字まで)", maxlength:"50" %>
      <div class="movie-form">
        <div class="weight-bold-text">
          作品の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :movie_text, class:"movies-text", id:"movie-text", placeholder:"作品の説明（必須 500文字まで）", rows:"7" ,maxlength:"500" %>
      </div>
      <div class="movie-form">
        <div class="weight-bold-text">
          動画の長さ
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :long, class:"movies-short-text", id:"movie-long", placeholder:"（例）120分、全13話", maxlength:"15" %>
      </div>
      <div class="movie-form">
        <div class="weight-bold-text">
          制作者
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :producer, class:"movies-text", id:"movie-producer", placeholder:"制作者（必須 50文字まで）", rows:"1" ,maxlength:"50" %>
      </div>
      <div class="movie-form">
        <div class="weight-bold-text">
          演者
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :character, class:"movies-text", id:"movie-character", placeholder:"制作者（必須 200文字まで）", rows:"2" ,maxlength:"200" %>
      </div>
      <div class="movie-form">
        <div class="weight-bold-text">
          作品の公開日
          <span class="indispensable">必須</span>
        </div>
        <div class='input-release-wrap'>
          <%= raw sprintf(
                      f.date_select(
                        :release_date,
                        class:'select-release',
                        id:"release-date",
                        use_month_numbers: true,
                        prompt:'--',
                        start_year: 1930,
                        end_year: (Time.now.year + 5),
                        date_separator: '%s'),
                      "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
    <%# /商品名と商品説明 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "作品の内容を更新する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">フリマ利用規約</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎Furima,Inc.
    </p>
  </footer>
</div>