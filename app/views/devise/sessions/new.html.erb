<%= render "shared/second-header"%>

<div class='container-fluid'>
  <%= form_with model: @user, url: user_session_path, class: 'registration-main row', local: true do |f| %>
    <div class='form-wrap row'>
      <div class="col-2"></div>
      <div class="col">
        <div class='form-header, row align-items-start justify-content-start'>
          <h1 class='form-header-text'>
            会員情報入力
          </h1>
        </div>
        <div class='login-flash-message, row align-items-start justify-content-start'>
          <%= flash[:notice] %>
          <%= flash[:alert] %>
        </div>
        <div class="form-group, row align-items-start justify-content-start">
          <div class='form-text-wrap'>
            <label class="form-text">メールアドレス</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
        </div>
        <div class="form-group, row align-items-start justify-content-start">
          <div class='form-text-wrap'>
            <label class="form-text">パスワード</label>
            <span class="indispensable">必須</span>
          </div>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
        </div>
        <div class='login-btn, row align-items-start justify-content-start'>
<%= link_to 'Facebookでログイン', user_facebook_omniauth_authorize_path, method: :post%>
<%= link_to 'Googleでログイン', user_google_oauth2_omniauth_authorize_path, method: :post%>
        </div>
        <div class='login-btn, row align-items-start justify-content-start'>
          <%= f.submit "ログイン" ,class:"login-red-btn" %>
        </div>
      </div>
      <div class="col-2"></div>
    </div>
  <% end %>
</div>
<%= render "shared/second-footer"%>
