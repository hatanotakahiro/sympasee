<%= render "shared/second-header"%>

<div class='sing-up container-fluid'>
  <%= form_with model: @user, url: user_registration_path, class: 'registration-main row', local: true do |f| %>
  <div class='form-wrap row'>
    <div class="col-2"></div>
    <div class="col">
      <div class='form-header, row align-items-start justify-content-start'>
        <h1 class='form-header-text'>
          会員情報入力
        </h1>
      </div>
      <%= render 'shared/error_messages', model: f.object %>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">ニックネーム</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_field :nickname, class:"input-default", id:"nickname", placeholder:"例) sympasee太郎", maxlength:"40" %>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
        <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード(確認)</label>
          <span class="indispensable">必須</span>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">プロフィール</label>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :profile, class:"input-name", id:"last-name", placeholder:"例) アニメ映画好きです", size: "80x5" %>
        </div>
      </div>
      <div class="form-group, row align-items-start">
        <div class='form-text-wrap'>
          <label class="form-text">プロフィール画像</label>
        </div>
        <div class='input-image-wrap'>
          <p>
            クリックしてファイルをアップロード
          </p>
          <%= f.file_field :profile_image, id:"user-image" %>
        </div>
      </div>
      <div class='register-btn, row align-items-start'>
        <%= f.submit "会員登録" ,class:"register-red-btn" %>
      </div>
    </div>
    <div class="col-2"></div>
  </div>
  <% end %>
</div>
<%= render "shared/footer" %>